<UserControl x:Class="puntoDeVenta.Views.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:puntoDeVenta.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">

    <d:UserControl.DataContext>
        <vm:VentasViewModel/>
    </d:UserControl.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍" VerticalAlignment="Center" FontSize="16" Margin="5,0,10,0"/>

                    <TextBox  x:Name="txtBuscar"
                        Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="16" VerticalContentAlignment="Center" BorderThickness="0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding BuscarCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <Button Grid.Column="2" Content="Buscar" Command="{Binding BuscarCommand}"
                            Background="{StaticResource BrushPrimario}" Foreground="White" 
                            Padding="15,5" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>

            <ListBox Grid.Row="1" ItemsSource="{Binding ResultadosBusqueda}" 
                     SelectedItem="{Binding ProductoSeleccionadoBusqueda}"
                     MaxHeight="150" Margin="0,0,0,10" BorderThickness="0" Background="#FFF8E1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding PrecioVenta, StringFormat=C2}" Foreground="Green"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding SeleccionarDeListaCommand}"/>
                    <KeyBinding Key="Return" Command="{Binding SeleccionarDeListaCommand}"/>
                </ListBox.InputBindings>
            </ListBox>

            <DataGrid Grid.Row="2" ItemsSource="{Binding Carrito}" SelectedItem="{Binding DetalleSeleccionadoCarrito}"
                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      GridLinesVisibility="Horizontal" Background="White" RowHeight="40"
                      HeadersVisibility="Column" BorderThickness="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="60" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Precio U." Binding="{Binding PrecioUnitario, StringFormat=C2}" Width="90"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Subtotal, StringFormat=C2}" Width="100" FontWeight="Bold" Foreground="{StaticResource BrushPrimario}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="#CFD8DC" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Resumen de Venta" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BrushTextoOscuro}" Margin="0,0,0,20"/>

                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="Artículos:" Foreground="Gray"/>
                        <TextBlock Text="{Binding CantidadProductos}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                    </DockPanel>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="TOTAL A PAGAR" HorizontalAlignment="Center" Foreground="Gray" FontSize="14"/>
                    <TextBlock Text="{Binding TotalVenta, StringFormat=C2}" HorizontalAlignment="Center" 
                               FontSize="40" FontWeight="Bold" Foreground="{StaticResource BrushPrimario}" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                    <Button Content="🗑️ Quitar Seleccionado" Command="{Binding QuitarDelCarritoCommand}"
                            Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0" Height="40" Margin="0,0,0,10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Cancelar Venta" Command="{Binding CancelarVentaCommand}"
                            Background="#ECEFF1" Foreground="Gray" BorderThickness="0" Height="40" Margin="0,0,0,20">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="COBRAR (F5)" Command="{Binding CobrarCommand}"
                            Background="{StaticResource BrushVerdeExito}" Foreground="White"
                            Height="60" FontSize="20" FontWeight="Bold" BorderThickness="0">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#81C784" Opacity="0.5" ShadowDepth="2"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="30">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>