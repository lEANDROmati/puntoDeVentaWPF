<UserControl x:Class="puntoDeVenta.Views.VentasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:puntoDeVenta.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Focusable="True"
             Background="White">

    <UserControl.DataContext>
        <vm:VentasViewModel/>
    </UserControl.DataContext>

    <UserControl.InputBindings>
        <KeyBinding Key="F2" Command="{Binding AbrirBuscadorCommand}"/>
        <KeyBinding Key="F5" Command="{Binding CobrarCommand}"/>
        <KeyBinding Key="Esc" Command="{Binding CancelarVentaCommand}"/>
    </UserControl.InputBindings>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="8" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="🔍" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="Gray"/>

                    <TextBox x:Name="txtBuscar" Grid.Column="1"
                             Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="20" Padding="5" VerticalContentAlignment="Center"
                             BorderThickness="0" Background="Transparent"
                             Tag="Escanear producto o F1...">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding BuscarProductoCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </Grid>
            </Border>

            <Button Grid.Column="1" Command="{Binding AbrirBuscadorCommand}"
                    Content="📂 Catálogo (F2)"
                    Background="#3F51B5" Foreground="White" FontWeight="Bold"
                    Padding="20,0" Margin="15,0,0,0" BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <DataGrid x:Name="gridCarrito"
                  Grid.Row="1" ItemsSource="{Binding Carrito}" SelectedItem="{Binding ItemSeleccionado}"
                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  BorderThickness="1" BorderBrush="#EEEEEE" Background="White" RowHeight="45">

            <DataGrid.InputBindings>
                <KeyBinding Key="Delete" Command="{Binding EliminarItemCommand}"/>
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*" IsReadOnly="True" FontSize="14"/>

                <DataGridTextColumn Header="Precio" Binding="{Binding PrecioUnitario, StringFormat=C2}" Width="120" IsReadOnly="True" FontSize="14"/>

                <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}" Width="100" FontWeight="Bold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="16"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="16"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C2}" Width="120" IsReadOnly="True" FontWeight="Bold" Foreground="#3F51B5" FontSize="14"/>

                <DataGridTemplateColumn Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌" 
                                    Click="BtnEliminar_Click"
                                    Command="{Binding DataContext.EliminarItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}"
                                    Background="Transparent" BorderThickness="0" Foreground="#D32F2F" Cursor="Hand"
                                    FontSize="16" FontWeight="Bold" ToolTip="Quitar (Supr)"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Margin="0,20,0,0" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Atajos de Teclado:" FontWeight="SemiBold" Foreground="Gray"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Border Background="#EEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                            <TextBlock Text="F1: Buscar" FontSize="11"/>
                        </Border>
                        <Border Background="#EEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                            <TextBlock Text="F2: Catálogo" FontSize="11"/>
                        </Border>
                        <Border Background="#EEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                            <TextBlock Text="SUPR: Borrar" FontSize="11"/>
                        </Border>
                        <Border Background="#EEE" CornerRadius="4" Padding="5,2" Margin="0,0,5,0">
                            <TextBlock Text="ESC: Cancelar" FontSize="11"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel VerticalAlignment="Center" Margin="0,0,20,0" HorizontalAlignment="Right">
                        <TextBlock Text="TOTAL A PAGAR" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalVenta, StringFormat=C2}" FontSize="36" FontWeight="Bold" Foreground="#3F51B5"/>
                    </StackPanel>

                    <Button Command="{Binding CobrarCommand}" Content="COBRAR (F5)" 
                            Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                            Padding="30,10" FontSize="18" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#4CAF50" Opacity="0.4" ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>