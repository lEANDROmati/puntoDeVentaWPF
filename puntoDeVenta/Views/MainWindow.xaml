<Window x:Class="puntoDeVenta.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:puntoDeVenta.Views"
        xmlns:vm="clr-namespace:puntoDeVenta.ViewModels"
        Title="StartPDV Modern" Height="750" Width="1280"
        WindowStartupLocation="CenterScreen" 
        Background="{StaticResource BrushGradienteMenu}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:VentasViewModel}">
            <views:VentasView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InventarioViewModel}">
            <views:InventarioView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfiguracionViewModel}">
            <views:ConfiguracionView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,20,30,0">
            <StackPanel Orientation="Horizontal" Margin="25,0,0,40">
                <Border Background="White" Width="40" Height="40" CornerRadius="12">
                    <TextBlock Text="⚡" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="StartPDV" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Versión Pro" FontSize="11" Foreground="#9FA8DA"/>
                </StackPanel>
            </StackPanel>

            <Button Content="🖥️   Caja Principal" Command="{Binding IrACajaCommand}"
                    Style="{StaticResource EstiloMenuButton}"/>

            <Button Content="📦   Inventario" Command="{Binding IrAInventarioCommand}"
                    Style="{StaticResource EstiloMenuButton}"/>

            <Button Content="📊   Dashboard" Command="{Binding IrADashboardCommand}"
                    Style="{StaticResource EstiloMenuButton}"/>

            <Button Content="⚙️   Ajustes" Command="{Binding IrAConfiguracionCommand}"
                    Style="{StaticResource EstiloMenuButton}"/>

            <Button Content="🚪   Cerrar Sesión" Style="{StaticResource EstiloMenuButton}" VerticalAlignment="Bottom" Margin="10,100,10,0"/>
        </StackPanel>

        <Border Grid.Column="1" Background="{StaticResource BrushFondoApp}" 
                CornerRadius="20,0,0,20" Margin="0,10,0,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.2" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="30,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Sistema de Gestión" FontSize="22" FontWeight="Bold" Foreground="{StaticResource BrushTextoOscuro}"/>
                        <TextBlock Text="Sucursal: Lo de Elsa" FontSize="13" Foreground="Gray"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Center" Background="White" CornerRadius="15" Padding="15,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🕒 "/>
                            <TextBlock Text="{Binding FechaHoraActual}" FontWeight="SemiBold" Foreground="#455A64"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <ContentControl Grid.Row="1" Content="{Binding CurrentView}" ClipToBounds="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>