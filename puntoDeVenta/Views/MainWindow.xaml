<Window x:Class="puntoDeVenta.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:puntoDeVenta.ViewModels"
        xmlns:views="clr-namespace:puntoDeVenta.Views"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="Sistema de Punto de Venta" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:VentasViewModel}">
            <views:VentasView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InventarioViewModel}">
            <views:InventarioView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfiguracionViewModel}">
            <views:ConfiguracionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HistorialViewModel}">
            <views:HistorialView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportesViewModel}">
            <views:ReportesView/>
        </DataTemplate>

        <Style x:Key="EstiloMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5C6BC0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#3F51B5" Padding="10" 
                Visibility="{Binding MenuVisibility}">

            <StackPanel Width="170">
                <TextBlock Text="PUNTO DE VENTA" Foreground="White" FontWeight="Bold" 
                           FontSize="18" HorizontalAlignment="Center" Margin="0,15,0,30"/>

                <Button Content="🛒   Caja" Command="{Binding IrACajaCommand}" Style="{StaticResource EstiloMenuButton}"/>

                <Button x:Name="btnInventario" Content="📦   Inventario" Command="{Binding IrAInventarioCommand}" Style="{StaticResource EstiloMenuButton}"/>

                <Button x:Name="btnHistorial" Content="📜   Historial" Command="{Binding IrAHistorialCommand}" Style="{StaticResource EstiloMenuButton}"/>

                <Button x:Name="btnDashboard" Content="📊   Dashboard" Command="{Binding IrADashboardCommand}" Style="{StaticResource EstiloMenuButton}"/>

                <Button x:Name="btnReportes" Content="📈   Reportes" Command="{Binding IrAReportesCommand}" Style="{StaticResource EstiloMenuButton}"/>

                <Button x:Name="btnConfig" Content="⚙️   Ajustes" Command="{Binding IrAConfiguracionCommand}" Style="{StaticResource EstiloMenuButton}"/>

                <Rectangle Height="1" Fill="#7986CB" Margin="10,20"/>

                <TextBlock Text="Versión 1.0" Foreground="#C5CAE9" HorizontalAlignment="Center" FontSize="11"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <Button Command="{Binding VolverAlHomeCommand}" 
                                Visibility="{Binding HomeButtonVisibility}"
                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,20,0">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#E8EAF6" Width="40" Height="40" CornerRadius="20">
                                    <TextBlock Text="🏠" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Volver al Menú" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#3F51B5"/>
                            </StackPanel>
                        </Button>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding NombreSucursal}" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                            <TextBlock Text="{Binding FechaHoraActual}" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Width="35" Height="35" CornerRadius="20" Background="#E0E0E0" Margin="0,0,10,0">
                            <TextBlock Text="👤" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Usuario Activo" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="Conectado" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="0"/>
        </Grid>
    </Grid>
</Window>