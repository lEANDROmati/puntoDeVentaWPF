<Window x:Class="puntoDeVenta.Views.CobrarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finalizar Venta" Height="516" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="White" AllowsTransparency="True">

    <Border CornerRadius="20" Background="White" BorderBrush="#3F51B5" BorderThickness="2" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Resumen de Pago" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#3F51B5"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">

                <TextBlock Text="Método de Pago:" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cmbMetodoPago" Width="250" Height="40" FontSize="16" Margin="0,0,0,20"
                          SelectionChanged="CmbMetodoPago_SelectionChanged">
                    <ComboBoxItem Content="Efectivo" IsSelected="True"/>
                    <ComboBoxItem Content="Tarjeta Débito"/>
                    <ComboBoxItem Content="Tarjeta Crédito"/>
                    <ComboBoxItem Content="QR / Transferencia"/>
                </ComboBox>

                <TextBlock Text="TOTAL A PAGAR" HorizontalAlignment="Center" Foreground="Gray"/>
                <TextBlock x:Name="lblTotal" Text="$ 0.00" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#3F51B5" Margin="0,0,0,20"/>

                <TextBlock Text="Importe / Paga con:" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtPago"
                         Width="200" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" Height="50"
                         TextChanged="TxtPago_TextChanged" PreviewTextInput="TxtPago_PreviewTextInput"/>

                <TextBlock Text="Su Vuelto:" FontWeight="Bold" Margin="0,20,0,5" HorizontalAlignment="Center"/>
                <TextBlock x:Name="lblVuelto" Text="$ 0.00" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#388E3C"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="CANCELAR (Esc)" IsCancel="True" Click="BtnCancelar_Click"
                        Width="120" Height="45" Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0" Margin="0,0,10,0" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="CONFIRMAR (Enter)" IsDefault="True" Click="BtnConfirmar_Click"
                        Width="180" Height="45" Background="#4CAF50" Foreground="White" BorderThickness="0" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>