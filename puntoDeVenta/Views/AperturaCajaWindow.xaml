<Window x:Class="puntoDeVenta.Views.AperturaCajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apertura de Caja" Height="250" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow"
        FocusManager.FocusedElement="{Binding ElementName=txtMonto}">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="APERTURA DE CAJA" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Monto Inicial (Cambio):" FontWeight="SemiBold"/>

            <TextBox x:Name="txtMonto" Height="30" Margin="0,5,0,20" 
                     FontSize="16" HorizontalContentAlignment="Right" Text="0"
                     TabIndex="0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar (Esc)" IsCancel="True" Width="100" Height="35" Margin="0,0,10,0"/>
                <Button Content="ABRIR CAJA (Ent)" Click="BtnAceptar_Click" IsDefault="True" Width="120" Height="35" Background="#2E7D32" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>