<UserControl x:Class="puntoDeVenta.Views.HistorialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:puntoDeVenta.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900"
             Background="White">

    <UserControl.DataContext>
        <vm:HistorialViewModel/>
    </UserControl.DataContext>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Historial de Ventas" FontSize="26" FontWeight="Bold" Foreground="#3F51B5" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#F5F5F5" Padding="20" CornerRadius="10" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Desde:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <DatePicker SelectedDate="{Binding FechaInicio}" Width="120" VerticalContentAlignment="Center"/>

                <TextBlock Text="Hasta:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="20,0,10,0"/>
                <DatePicker SelectedDate="{Binding FechaFin}" Width="120" VerticalContentAlignment="Center"/>

                <Button Content="🔍 Buscar Ventas" Command="{Binding BuscarVentasCommand}"
                        Background="#3F51B5" Foreground="White" FontWeight="Bold"
                        Padding="20,8" Margin="30,0,0,0" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding ListaVentas}" SelectedItem="{Binding VentaSeleccionada}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" RowHeight="40"
                  BorderThickness="1" BorderBrush="#E0E0E0">

            <DataGrid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding VerDetalleCommand}"/>
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nro" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                <DataGridTextColumn Header="Método" Binding="{Binding MetodoPago}" Width="120"/>

                <DataGridTextColumn Header="Items" Binding="{Binding Detalles.Count}" Width="60"/>

                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat=C2}" Width="*" FontWeight="Bold" Foreground="#2E7D32"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Background="#E8EAF6" Padding="20" Margin="0,20,0,0" CornerRadius="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Ventas encontradas:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding CantidadVentas}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,30,0"/>

                <TextBlock Text="Total Recaudado:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding TotalVendido, StringFormat=C2}" FontSize="24" FontWeight="Bold" Foreground="#3F51B5"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>